<% layout("layouts/boilerplate") %>

    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds" method="post" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title </label>
                    <input class="form-control" type="text" id="title" name="campground[title]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location </label>
                    <input class="form-control" type="text" name="campground[location]" id="location" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price </label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="number" class="form-control" aria-label="Amount (to the nearest dollar)"
                            aria-describedby="price-label" id="price" name="campground[price]" placeholder="0.00"
                            required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description </label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description" cols="30"
                        rows="2" required></textarea>
                </div>
                <div class="mb-4">
                    <label for="formFileMultiple" class="form-label">Images</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </div>
                <button class="btn btn-success mb-3">Add Campground</button>
            </form>
            <a class="btn btn-light mb-3" href="/campgrounds">Cancel</a>
        </div>
    </div>